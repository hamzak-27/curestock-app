{
  "version": 2,
  "ignoreCommand": "echo 'Skipping ignore checks'",
  "builds": [
    {
      "src": "index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.py"
    }
  ],
  "env": {
    "ALLOWED_HOSTS": ".vercel.app",
    "DEBUG": "True",
    "OPENAI_API_KEY": "${OPENAI_API_KEY}",
    "DATABASE_URL": "${DATABASE_URL}",
    "SECRET_KEY": "django-insecure-rc!!rs%4$by+uy_bxppk^owfv(1!o)0u9k=&dd99-_22$eau^i"
  }
} 
